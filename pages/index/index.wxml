<view>
  <view>
    <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{image}}">
        <swiper-item>
          <view class="swiper-item">
            <image style="width:1000rpx" src="{{item}}" mode="scaleToFill" />
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="rowalign">
    <view style="background:#fadfad;flex-direction: row;">test</view>
    <block wx:for-items="{{list}}">
      <view class="widgets__item">
        <view style="flex:1" id="{{item.id}}" class="widgets__info">
          <view style="flex:1;">
            <view>
              <text class="widgets__info-name" style="font-size:46rpx">{{item.name}}</text>
            </view>
            <view>
              <text class="widgets__info-name" style="font-size:26rpx">{{item.name}}</text>
            </view>
          </view>
          <view style="flex:0.3;background:#ffffff;height:100rpx;"></view>
        </view>
      </view>
    </block>
  </view>
</view>